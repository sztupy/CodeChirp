@namespace=CodeChirp.Core
@namespace=CodeChirp.Controllers
@type=Post
%div
  %h2 Delete Post
  %p Are you sure?
  - using (Html.BeginForm("DeleteConfirmed","Posts",new { Id = ViewData.Model.Id }))
    = Html.AntiForgeryToken()
    %input( type="submit" value="Yes" )
    %input( type="button" name="No" value="No" onclick="javascript:history.go(-1);")
